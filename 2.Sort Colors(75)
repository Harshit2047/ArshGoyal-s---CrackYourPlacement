class Solution {
public:
    void sortColors(vector<int>& nums) {
        int low=0;
        int mid=0;
        int high=nums.size()-1;
        while(low>=mid){
            if(nums[mid]==2){
                swap(nums[mid],nums[high]);
                high--;
                mid--;
            }
            else if(nums[mid]==0){
                swap(nums[mid],nums[low]);
                low++;
                
            }
            else if(nums[mid]==1){
                mid++;
            }
        }
    }
};
